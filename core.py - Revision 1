# core.py - Revision 1

class Connection:
    def __init__(self, source, destinations, allowed_modifications):
        self.source = source
        self.destinations = destinations
        self.allowed_modifications = allowed_modifications

    def process_data(self, data):
        processed_data = data  # Placeholder, implement actual processing logic
        return processed_data

def route_data(input_data, connections):
    routed_data = {}
    for connection in connections:
        source = connection.source
        if source in input_data:
            input_for_connection = input_data[source]
            processed_data = connection.process_data(input_for_connection)
            for destination in connection.destinations:
                if destination in routed_data:
                    routed_data[destination].append(processed_data)
                else:
                    routed_data[destination] = [processed_data]
    return routed_data
